<link rel="stylesheet" href="/stylesheets/cart.css">

<div class="container-fluid cart">

  <form class="row margin-top">
    <div class="col-xs-12">

      <div class="cart-table-th row  margin-top">
        <div class="col-xs-8">
          <div class="total-price">
            <label for="">Total Price:&nbsp;<label>
            <div>{{totalPrice}}</div>
          </div>
        </div>
        <div class="col-xs-4  text-right">
          {{#if user}}
          <button class="btn btn-success">CheckOut</button>
          {{else}}
          <button class="btn btn-success" data-toggle="modal" data-target=".login-or-register">CheckOut</button>
          {{/if}}
          <div class="modal fade login-or-register" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="row">
                     <a type="button" href="/login" class="col-xs-6 col-xs-offset-3 btn btn-primary">Login</a>
                  </div>
                  <div class="row">
                     <a type="button" href="/register" class="col-xs-6 col-xs-offset-3 btn btn-primary">Register</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="cart-order-list row  margin-top">
        <ul class="list-unstyled col-xs-12">
        {{#each dishArray}}
          <li class="row">
            <div class="col-xs-5">
              <div class="dish-name padding-top">
                {{dishName}}
              </div>
            </div>
            <div class="col-xs-2 text-center">
              <div class="unit-price padding-top">
                {{unitPrice}}
              </div>
            </div>
            <div class="col-xs-4  text-center">
              <div class="quantity btn-group row">
                <button type="button" class="col-xs-4 btn btn-default">-</button>
                <input type="text" class="col-xs-4 btn btn-default" value={{quantity}}>
                <button type="button" class="col-xs-4 btn btn-default">+</button>
              </div>
            </div>
          </li>
        {{/each}}
        </ul>
      </div>

      <div class="cart-table-footer row  margin-top">
        <div class="col-xs-8">
          <div class="total-price">
            <label for="">Total Price:&nbsp;<label>
            <div>{{totalPrice}}</div>
          </div>
        </div>
        <div class="col-xs-4  text-right">
          {{#if user}}
          <button class="btn btn-success">CheckOut</button>
          {{else}}
          <button class="btn btn-success" data-toggle="modal" data-target=".login-or-register">CheckOut</button>
          {{/if}}
        </div>
      </div>

    </div>
  </form>

</div>


